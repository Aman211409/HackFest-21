<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/patient"
    app:startDestination="@id/predictionHomeFragment">

    <fragment
        android:id="@+id/predictionHomeFragment"
        android:name="com.hackfest21.covigenix.UI.Prediction.PredictionHomeFragment"
        android:label="Prediction"
        tools:layout="@layout/fragment_prediction_home"/>

    <navigation
        android:id="@+id/patientRequestsFragment"
        app:startDestination="@id/patientRequestsHomeFragment">
        <fragment
            android:id="@+id/patientRequestsHomeFragment"
            android:name="com.hackfest21.covigenix.UI.PatientServices.PatientRequestHomeFragment"
            android:label="Essentials"
            tools:layout="@layout/fragment_patient_request_home">
            <action
                android:id="@+id/home_to_apply"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:destination="@id/patientRequestsApplyFragment"/>
        </fragment>
        <fragment
            android:id="@+id/patientRequestsApplyFragment"
            android:name="com.hackfest21.covigenix.UI.PatientServices.PatientRequestApplyFragment"
            android:label="Providers"
            tools:layout="@layout/fragment_patient_request_apply">
        </fragment>
    </navigation>

    <fragment
        android:id="@+id/communityHomeFragment"
        android:name="com.hackfest21.covigenix.UI.Community.CommunityHomeFragment"
        android:label="Community"
        tools:layout="@layout/fragment_community_home"/>

    <navigation
        android:id="@+id/myRequestsFragment"
        app:startDestination="@id/myRequestsHomeFragment">
        <fragment
            android:id="@+id/myRequestsHomeFragment"
            android:name="com.hackfest21.covigenix.UI.PatientServices.MyRequestsHomeFragment"
            android:label="My Requests"
            tools:layout="@layout/fragment_my_requests_home">
            <action
                android:id="@+id/home_to_list"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"
                app:destination="@id/myRequestsListFragment"/>
        </fragment>
        <fragment
            android:id="@+id/myRequestsListFragment"
            android:name="com.hackfest21.covigenix.UI.PatientServices.MyRequestsListFragment"
            android:label="Providers"
            tools:layout="@layout/fragment_my_requests_list">
        </fragment>
    </navigation>

    <fragment
        android:id="@+id/patientProfileFragment"
        android:name="com.hackfest21.covigenix.UI.PatientServices.PatientProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_patient_profile" />
</navigation>